{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "website/node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "useDefineForClassFields": true,
    "module": "es2022",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types/"],
    "paths": {
      "@bemuse/*": ["./src/*"]
    },
    "verbatimModuleSyntax": true
  }
}
