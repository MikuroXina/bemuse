{
  "name": "@mikuroxina/bms",
  "version": "52.0.0",
  "description": "BMS Parser for JavaScript",
  "type": "module",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "engines": {
    "node": ">=24.0.0"
  },
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib tsconfig.tsbuildinfo",
    "build": "tsc -b .",
    "bmspec:update": "gulp bmspec:update",
    "test": "wireit",
    "coverage": "wireit",
    "dev": "tsc --watch",
    "lint": "eslint ."
  },
  "wireit": {
    "test": {
      "dependencies": [
        "bmspec:update"
      ],
      "command": "gulp test",
      "env": {
        "BMS_COV": ""
      }
    },
    "coverage": {
      "dependencies": [
        "bmspec:update"
      ],
      "command": "gulp test",
      "env": {
        "BMS_COV": "true"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bemusic/bms-js.git"
  },
  "keywords": [
    "BMS"
  ],
  "browser": {
    "./reader/index.js": "./reader/index.web.js"
  },
  "author": "Thai Pangsakulyanont <org.yi.dttvb@gmail.com> (http://dt.in.th/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bemusic/bms-js/issues"
  },
  "homepage": "https://github.com/bemusic/bms-js",
  "devDependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "@types/invariant": "^2.2.30",
    "@types/lodash.assign": "^4.2.4",
    "@types/lodash.map": "^4.6.13",
    "@types/lodash.uniq": "^4.5.4",
    "@types/lodash.values": "^4.3.4",
    "@types/node": "24",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.0.0",
    "eslint-config-bemuse": "workspace:*",
    "gulp": "^4.0.2",
    "hide-stack-frames-from": "^1.0.0",
    "lazy-property": "^1.0.0",
    "stack-chain": "^1.3.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wireit": "^0.14.12"
  },
  "dependencies": {
    "chardet": "^2.1.1",
    "data-structure": "^1.2.0",
    "iconv-lite": "^0.4.24",
    "invariant": "^2.2.4",
    "lodash.assign": "^4.2.0",
    "lodash.map": "^4.6.0",
    "lodash.uniq": "^4.5.0",
    "lodash.values": "^4.3.0"
  }
}
